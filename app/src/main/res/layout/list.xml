<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:layout_weight="1"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            android:layout_weight="1"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Intensity"
            android:layout_weight="1"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:id="@+id/South24locationId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="South 24 Pargana"
            android:layout_weight="1"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/South24timeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:40PM"
            android:layout_weight="1"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/South24intensityId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HIGH"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#d50000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="North 24 Parganas"
            android:layout_weight="1"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="11:30AM"
            android:layout_weight="1"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#ffa726"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Howrah"
            android:layout_weight="1"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3:00PM"
            android:layout_weight="1"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Low"
            android:layout_weight="1"
            android:textSize="18dp"
            android:textColor="#c0ca33"/>
    </LinearLayout>

</LinearLayout>